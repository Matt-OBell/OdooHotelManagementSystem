<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Form view of hotel room -->
        <record id="hotel_room_amenity_form" model="ir.ui.view">
            <field name="name">hotel.room.amenity.form</field>
            <field name="model">hotel.room.amenity</field>
            <field name="arch" type="xml">
                <form string="Hotel Room">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" string="Name" />
                            <h1>
                                <field name="name" required="1"/>
                            </h1>
                        </div>
                        <group>
                            <field name="category_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree -->
        <record id="hotel_room_amenity_tree" model="ir.ui.view">
            <field name="name">hotel.room.amenity.tree</field>
            <field name="model">hotel.room.amenity</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                    <field name="category_id" />
                </tree>
            </field>
        </record>

        <record id="hotel_room_amenity_type_form" model="ir.ui.view">
            <field name="name">hotel.room.amenity.type.form</field>
            <field name="model">hotel.room.amenity.type</field>
            <field name="arch" type="xml">
                <form string="Hotel Room">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" string="Name" />
                            <h1>
                                <field name="name" required="1"/>
                            </h1>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree -->
        <record id="hotel_room_amenity_type_tree" model="ir.ui.view">
            <field name="name">hotel.room.amenity.type.tree</field>
            <field name="model">hotel.room.amenity.type</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                </tree>
            </field>
        </record>
    </data>
</odoo>



    